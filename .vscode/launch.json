{   "version": "0.2.0",    
    "configurations": [ 
        {
            "name": "Python Debugger: Flask",
            "type": "debugpy",
            "cwd": "${fileDirname}",
            "request": "launch",
            "module": "flask",
            "env": {
                "PYTHONPATH": "${cwd}",
                "FLASK_APP": "app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true,
            "justMyCode": true
        }   
    ]
}